<div class="normal_form">
  <div class="form_titulo">
    &nbsp;
  </div>
<% form_for(@campo_documento) do |f| %>
  <%= f.error_messages %>


    <label><b>Tipo Documento</b>
       <%= f.hidden_field :tipo_documento_id %>
       <%= @campo_documento.tipo_documento.tipo %>
    </label>


    <label><b>Tipo</b>
        <%= f.select("tipo_campo", ['TEXTO','NUMERO','DATA', 'MEMO']) %>
    </label>


    <label><b>Nome</b>
       <%= f.text_field :nome %>
    </label>

    <label><b>Ordem</b>
       <%= f.text_field :ordem %>
    </label>

    <label><b>Limite</b>
       <%= f.text_field :limite %>
    </label>

    <label><b>Descrição</b>
        <%= f.text_area :descricao %>
    </label>

    <label><b>Exibe Listagem</b>
        <%= f.check_box :exibe_listagem %>
    </label>

  <p class='form_bar'>
    <%= f.submit 'Salvar' %>
  </p>
<% end %>
</div>

