<h1>Tipos de Documentos (Financeiro)</h1>

<table>
  <tr>
    <th>Descrição</th>
    <th colspan=3>Opções</th>
  </tr>

<% @tipos_de_documento.each do |tipo_de_documento| %>
  <tr>
    <td><%=h tipo_de_documento.descricao %></td>
    <td><%= link_to 'Exibir', tipo_de_documento %></td>
    <td><%= link_to 'Editar', edit_tipo_de_documento_path(tipo_de_documento) %></td>
    <td><%= link_to 'Excluir', tipo_de_documento, :confirm => 'Confirma Exclusão?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo Tipo de documento', new_tipo_de_documento_path %>
