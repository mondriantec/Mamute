<h1>Cadastro de conveniados</h1>

<table>
  <tr>
    <th>Cnpj</th>
    <th>Nome</th>
  </tr>

<% @conveniados.each do |conveniado| %>
  <tr>
    <td><%=h conveniado.cnpj %></td>
    <td><%=h conveniado.nome %></td>
    <td><%= link_to 'Visualizar', conveniado %></td>
    <td><%= link_to 'Editar', edit_conveniado_path(conveniado) %></td>
    <td><%= link_to 'Apagar', conveniado, :confirm => 'Tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo conveniado', new_conveniado_path %>
