<h1>Cadastro de documentos</h1>

<br/>
<div dojoType="dijit.layout.TabContainer" style="width: 100%; height: 300px;"
tabStrip="true">                                               

    
	<% if usuario_conveniado? %>
		<div dojoType="dijit.layout.ContentPane" title="Recebimento" selected="true">
			<%= render 'lista', :documentos => @documentos %>
		</div>
    <% elsif usuario_cartorio? %> 
		<div dojoType="dijit.layout.ContentPane" title="Documentos" selected="true">
			<%= render 'lista', :documentos => @documentos %>
		</div>                                      
    	<div dojoType="dijit.layout.ContentPane" title="Novo Documento" selected="true">
		<%= render 'form' %>
    	</div> 
    	<div dojoType="dijit.layout.ContentPane" title="Digitalizar">

    	</div>                                                                              
	<% elsif usuario_final? %>
	<div dojoType="dijit.layout.ContentPane" title="Documentos" selected="true">
		<%= render 'meus_documentos', :documentos => @documentos %>
	</div>
    <% end %>

</div>





<br />

<%= link_to 'Novo Documento', new_documento_path %>


<script type="text/javascript" src="/javascripts/dojo/dojo.js" djConfig="parseOnLoad: true"></script>
<script type="text/javascript">
    dojo.require("dijit.layout.TabContainer");
    dojo.require("dijit.layout.ContentPane");
</script>





