<h1>Editar documento</h1>

<% form_for(@documento) do |f| %>
  <%= f.error_messages %>


<label>
	    <b>CPF Cliente</b><%= text_field_tag 'usuario[cpf]' %>   <span id="nome_cliente"></span>
</label>

<% for c in @campos %>
	<label><b><%= c.nome %></b>
	<% case c.tipo_campo when "TEXTO" %>
		<%= text_field_tag "metadados[#{c.id}]" %>
		<% when "DATA" %>
		    <%= text_field_tag "metadados[#{c.id}]" %>
		<% when "NUMERO" %>
		    <%= text_field_tag "metadados[#{c.id}]" %>
		<% when "TEXTO_LONGO" %>
		    <%= text_area_tag "metadados[#{c.id}]" %>
	<% end %>     
	</label>
<% end %>    

<%= observe_field 'usuario_cpf',
		:update => 'nome_cliente',
		:url => {:controller => 'usuarios', :action => 'por_cpf'},
		:with => 'cpf'
 %>
  <p>
    <%= f.submit 'Salvar' %>
  </p>
<% end %>

<%= link_to 'Visualizar', @documento %> |
<%= link_to 'Voltar', documentos_path %>
