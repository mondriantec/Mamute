<% form_for(@categoria) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </p>
  <p>
    <%= f.label :descricao %><br />
    <%= f.text_area :descricao %>
  </p>
  <p>
    <%= f.label :parent_id %><br />
    <%= f.select :parent_id, @categorias %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>