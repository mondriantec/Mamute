<div class="normal_form">
  <div class="form_titulo">
    &nbsp;
  </div>
<% form_for(@configuracao) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :chave %><br />
    <%= f.text_field :chave %>
  </p>
  <p>
    <%= f.label :valor %><br />
    <%= f.text_field :valor %>
  </p>
  <p>
    <%= f.label :descricao %><br />
    <%= f.text_area :descricao %>
  </p>
  <p>
    <%= f.submit 'Salvar' %>
  </p>
<% end %>
</div>

