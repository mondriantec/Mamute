<div class="normal_form">
  <div class="form_titulo">
    &nbsp;
  </div>
<% form_for(@configuracao) do |f| %>
  <%= f.error_messages %>

  <label>
    <b>chave </b>
    <%= f.text_field :chave %>
  </label>
  <label>
    <b>valor </b>
    <%= f.text_field :valor %>
  </label>
  <label>
    <b>descricao </b>
    <%= f.text_area :descricao %>
  </label>
  <p class="form_bar">
    <%= f.submit 'Salvar' %>
  </p>
<% end %>
</div>

