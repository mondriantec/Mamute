<div class="normal_form">
  <div class="form_titulo">
    &nbsp;
  </div>
<% form_for(@notificacao) do |f| %>
  <%= f.error_messages %>
  <!--
  <label>
	<b>cartorio_id</b>
    <%= f.text_field :cartorio_id %>
  </label>
  <label>
	<b>notificado_id</b>
    <%= f.text_field :notificado_id %>
  </label>
  -->

  <label> 
	<b>CPF NOTIFICADO </b>
	<%= f.text_field :cpf %>
  </label>

  <label>		    
	<b>ENDEREÇO: </b>
	<%= f.text_field :endereco %>
  </label>
  <label>	    
	<b>BAIRRO: </b>
	<%= f.text_field :bairro %>
  </label>
  
  <label>	     
	<b>UF </b>
    <%= select_tag 'notificacao[uf]', options_for_select(lista_estados, "#{params[:uf].blank? ? 'nil' : params[:uf]}") %>
  </label>

  <label>		    
	<b>CIDADE </b>
    <span id="div_municipios">
        <%= select_tag 'dute[codmunic]', options_for_select(@cidades.collect { |c| [c.nome, c.id] }.insert(0, ['Selecione um Município...', ''])), :onchange => 'remove_css(this)', :valida => true %>
    </span>
  </label>

  <label> 
	<b>Motivo Notificação </b>
    <%= f.select :motivo_notificacao_id, MotivoNotificacao.find(:all).collect { |m| [m.motivo, m.id]}%>
  </label>

  <label>
	<b>texto</b>
    <%= f.text_area :texto %>
  </label>



  <p class="form_bar">
    <%= f.submit 'Salvar' %>
  </p>
<% end %>
</div>

<script>
jQuery(document).ready(function(){
    
    // Toda vez que houver modifacao no campo de uf é executado uma ação
    jQuery('#notificacao_uf').change( function() {
        jQuery.post('get_municipios', { uf: jQuery('#notificacao_uf').val() }, function(retorno) {
            jQuery('#div_municipios').html(retorno);
        });
    });
});
</script>
