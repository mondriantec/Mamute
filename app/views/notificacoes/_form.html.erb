<div class="normal_form">
  <div class="form_titulo">
    &nbsp;
  </div>
<% form_for(@notificacao) do |f| %>
  <%= f.error_messages %>
  <!--
  <label>
	<b>cartorio_id</b>
    <%= f.text_field :cartorio_id %>
  </label>
  <label>
	<b>notificado_id</b>
    <%= f.text_field :notificado_id %>
  </label>
  -->

  <label> 
	<b>CPF NOTIFICADO </b>
	<%= f.text_field :cpf %>
  </label>

  <label>		    
	<b>ENDEREÇO: </b>
	<%= f.text_field :endereco %>
  </label>
  <label>	    
	<b>BAIRRO: </b>
	<%= f.text_field :bairro %>
  </label>
  
  <label>	     
	<b>UF </b>
	<%= f.select :uf, @ufs  %>
  </label>
 <label>		    
	<b>CIDADE </b>
	<%= f.select :cidade, Cidade.find(:all).collect { |c| [c.nome, c.id]}%>
  </label>



  <label> 

	<b>Motivo Notificação </b>
    <%= f.select :motivo_notificacao_id, MotivoNotificacao.find(:all).collect { |m| [m.motivo, m.id]}%>

    	
  </label>
  <label>

	<b>texto</b>
    <%= f.text_area :texto %>
  </label>



  <p class="form_bar">
    <%= f.submit 'Salvar' %>
  </p>
<% end %>
</div>

