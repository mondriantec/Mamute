<style>
  select { width: 200px }
</style>
<h1>Menu de Notificações</h1>

<div dojoType="dijit.layout.TabContainer" style="width: 100%; height: 400px;" tabStrip="true">                         

	<% if !usuario_final?  %>
	    <div dojoType="dijit.layout.ContentPane" title="Pendentes" selected="true">
		<%= render 'lista', :notificacoes => @notificacoes_pendentes %>
	    </div>
	    <div dojoType="dijit.layout.ContentPane" title="Enviadas">
	        <%= render 'lista', :notificacoes => @notificacoes_enviadas %>
	    </div>
	    <div dojoType="dijit.layout.ContentPane" title="Devolvidas">
	        <%= render 'lista', :notificacoes => @notificacoes_devolvidas %>
	    </div>
            <div dojoType="dijit.layout.ContentPane" title="Criar Notificação">
                <%= render 'form', :notificacoes => @notificacoes_pendentes %>
            </div>
	<% elsif usuario_conveniado? %>
		<div dojoType="dijit.layout.ContentPane" title="Nova Notificação">
	        <%= render 'form' %>
	    </div>    
	<% elsif usuario_final? %>
            <div dojoType="dijit.layout.ContentPane" title="Minhas Notificações" selected="true">
		<%= render 'lista', :notificacoes => @notificacoes_pendentes %>
    	    </div>	
	<% end %>
</div>

<br />

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/dojo/1.5/dojo/dojo.xd.js" djConfig="parseOnLoad: true"></script>
<script type="text/javascript">
    dojo.require("dijit.layout.TabContainer");
    dojo.require("dijit.layout.ContentPane");
</script>
