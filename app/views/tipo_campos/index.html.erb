<h1>Cadastro de tipo_campos</h1>

<table>
  <tr>
    <th>Tipo</th>
  </tr>

<% @tipo_campos.each do |tipo_campo| %>
  <tr>
    <td><%=h tipo_campo.tipo %></td>
    <td><%= link_to 'Visualizar', tipo_campo %></td>
    <td><%= link_to 'Editar', edit_tipo_campo_path(tipo_campo) %></td>
    <td><%= link_to 'Apagar', tipo_campo, :confirm => 'Tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo tipo_campo', new_tipo_campo_path %>
