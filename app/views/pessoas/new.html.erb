  <label class="uma_linha_form"><b>nome_mae </b>
    <%= f.text_field :nome_mae, :size => "80" %>
  </label>



  <label class="nova_linha_form"><b>Rg</b>
    <%= f.text_field :rg, :size => "14" %>
  </label>
  <label><b>Org√£o </b>
    <%= f.text_field :orgao_emissor_rg, :size => "14" %>
  </label>
