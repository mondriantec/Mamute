<h1>Cadastro de Depositários</h1>
<p>
  <b>Descrição:</b>
  <%=h @depositario.descricao %>
</p>

<p>
  <b>Conta Bancária:</b>
  <%=h @depositario.descricao_tipo %>
</p>

<p>
  <b>Agência:</b>
  <%=h @depositario.agencia %>
</p>

<p>
  <b>Conta:</b>
  <%=h @depositario.conta %>
</p>

<p>
  <b>Banco:</b>
  <%=h @depositario.banco %>
</p>


<%= link_to 'Editar', edit_depositario_path(@depositario) %> |
<%= link_to 'Voltar', depositarios_path %>
<br><hr>

<b>Sub Depositarios</b>
<table>
  <tr>
    <th>Descrição</th>
    <th>Status</th>
    <th colspan=3>Opções</th>
  </tr>

<% for s in @depositario.sub_depositarios %>
  <tr>
    <td><%=h s.descricao %></td>
    <td><%=h s.descricao_status %></td>
    <td><%= link_to 'Editar', :controller => :sub_depositarios, :action => :edit, :id => s.id, :depositario_id => @depositario.id  %></td>
    <td><%= link_to 'Excluir', s, :confirm => 'Confirma Exclusão?', :method => :delete %></td>
  </tr>
<% end %>
</table>	
<%= link_to 'Novo Sub Depositário', :controller => :sub_depositarios, :action => :new, :depositario_id => @depositario.id %>
