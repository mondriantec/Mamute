<div class="normal_form">
  <div class="form_titulo">
    &nbsp;
  </div>
<% form_for(@motivo_notificacao) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :motivo %><br />
    <%= f.text_field :motivo %>
  </p>
  <p>
    <%= f.label :descricao %><br />
    <%= f.text_area :descricao %>
  </p>
  <p>
    <%= f.submit 'Salvar' %>
  </p>
<% end %>
</div>

